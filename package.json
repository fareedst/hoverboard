{
  "name": "hoverboard",
  "version": "1.5.0",
  "description": "Modern Pinboard browser extension with hover overlays and seamless bookmark management",
  "type": "module",
  "scripts": {
    "build": "npm run build:dev",
    "build:only": "node scripts/build.js",
    "build:dev": "npm run style:fix && npm run validate && node scripts/build.js",
    "build:prod": "npm run style:fix && npm run validate && npm run minify && node scripts/build.js",
    "build:sw": "esbuild src/core/service-worker.js --bundle --outfile=dist/src/core/service-worker.js --format=esm --platform=browser",
    "build:options": "esbuild src/ui/options/options.js --bundle --outfile=dist/src/ui/options/options.js --format=esm --platform=browser",
    "build:content": "esbuild src/features/content/content-main.js --bundle --outfile=dist/src/features/content/content-main.js --format=iife --platform=browser",
    "build:popup": "esbuild src/ui/popup/popup.js --bundle --outfile=dist/src/ui/popup/popup.js --format=esm --platform=browser",
    "build:native": "node scripts/build-native.js",
    "validate": "npm run lint && npm run typecheck && npm run validate:manifest && npm run security:check",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "style:fix": "npm run lint:fix && find src -name '*.js' -exec sed -i '' 's/[[:space:]]*$//' {} \\;",
    "validate:manifest": "node scripts/validate-manifest.js",
    "minify": "echo 'Minification placeholder - add webpack/rollup if needed'",
    "dev": "npm run build:dev && npm run watch",
    "watch": "chokidar 'src/**/*' manifest.json -c 'npm run build:dev'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch='**/*.test.js'",
    "test:integration": "jest --testMatch='**/*.integration.test.js'",
    "test:e2e": "jest --testMatch='**/*.e2e.test.js'",
    "test:e2e:extension": "npx playwright test -c playwright.extension.config.js",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "security:check": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "quality:check": "npm run lint && npm run test:coverage && npm run security:check",
    "precommit": "npm run quality:check",
    "clean": "rm -rf dist/* coverage/",
    "dev:server": "node dev-server.js",
    "dev:overlay": "npm run dev:server",
    "version:set": "bash scripts/set-version.sh",
    "screenshots": "npm run build:dev && node scripts/screenshots-placeholder.js",
    "screenshots:placeholder": "node scripts/screenshots-placeholder.js",
    "prepare": "husky"
  },
  "author": "Fareed Stevenson",
  "license": "ISC",
  "engines": {
    "node": ">=20.19.0"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "test-exclude": "^7.0.1",
    "ajv": "^6.14.0",
    "basic-ftp": "^5.2.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "cors": "^2.8.5",
    "express": "^5.0.0",
    "fast-xml-parser": "^5.3.6",
    "node-fetch": "^2.6.7",
    "webextension-polyfill": "^0.12.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^10.0.0",
    "@eslinter/eslint-config-standard": "^0.1.2",
    "@jest/globals": "^30.0.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@types/chrome": "^0.1.37",
    "babel-jest": "^30.0.0",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.27.0",
    "eslint": "^10.0.0",
    "globals": "^15.15.0",
    "husky": "^9.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-junit": "^16.0.0",
    "jest-puppeteer": "^9.0.0",
    "jest-webextension-mock": "^3.8.9",
    "lint-staged": "^16.0.0",
    "puppeteer": "^24.10.0",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "sed -i '' 's/[[:space:]]*$//'",
      "jest --findRelatedTests --passWithNoTests"
    ]
  }
}
